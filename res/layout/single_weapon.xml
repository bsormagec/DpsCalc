<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/wpDps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Weapon DPS"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/wpDpsEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/mainAttb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="Main Attribute"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/mainAttbEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/ias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/editText2"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Increase Attack Speed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/iasEdit"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/iasEditPct"
        android:layout_column="2"
        android:layout_row="2"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/critChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Critical Hit Chance"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/critChanceEdit"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/critChancePct"
        android:layout_column="2"
        android:layout_row="3"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/critDam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Critical Hit Damage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/critDamEdit"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/critDamPct"
        android:layout_column="2"
        android:layout_row="4"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/calcDps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:layout_row="5"
        android:text="Calculated DPS"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/calcDpsDisplay"
        android:layout_column="0"
        android:layout_row="6"
        android:hint="DPS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/deltaDps"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:layout_row="7"
        android:text="Delta DPS for"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/deltaSpinner"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:id="@+id/deltaDpsDisplay"
        android:layout_column="0"
        android:layout_row="8"
        android:hint="delta DPS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:layout_width="68dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="232dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="8" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="7" />

    <Space
        android:layout_width="100dp"
        android:layout_height="178dp"
        android:layout_column="0"
        android:layout_row="9" />

    <Space
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_column="0"
        android:layout_row="9" />

    <Space
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_row="9" />

    <Space
        android:layout_width="100dp"
        android:layout_height="124dp"
        android:layout_column="0"
        android:layout_row="9" />

    <Space
        android:layout_width="100dp"
        android:layout_height="124dp"
        android:layout_column="0"
        android:layout_row="9" />

    <Space
        android:layout_width="100dp"
        android:layout_height="124dp"
        android:layout_row="9" />

</GridLayout>